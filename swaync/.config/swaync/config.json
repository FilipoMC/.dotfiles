{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "control-center-margin-top": 15,
  "control-center-margin-bottom": 10,
  "control-center-margin-right": 15,
  "notification-icon-size": 64,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": false,
  "control-center-width": 500,
  "control-center-height": 700,
  "notification-window-width": 300,
  "scripts": {
    "play-sound-on-notify": {
      "exec": "paplay /usr/share/sounds/LinuxMint/stereo/notification.oga",
      "urgency": "Low|Normal|Critical"
    }
  },
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "text-empty": "Nothing here",
  "widgets": ["buttons-grid", "volume", "backlight", "mpris", "title", "dnd"],
  "widget-config": {
    "title": {
      "text": "Notification Center",
      "clear-all-button": true,
      "button-text": "Û∞Ü¥ Clear"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "label": {
      "max-lines": 1,
      "text": "Notification Center"
    },
    "mpris": {
      "image-size": 100,
      "image-radius": 0,
      "blacklist": ["kew", "firefox", "spotify"]
    },
    "volume": {
      "label": "Û∞ïæ"
    },
    "backlight": {
      "label": "Û∞Éü"
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "Û∞Ü¥",
          "command": "swaync-client -C"
        },
        {
          "label": "Û∞ïæ",
          "command": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
          "type": "toggle"
        },
        {
          "label": "Û∞ç¨",
          "command": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
          "type": "toggle"
        },
        {
          "label": "ÔÄΩ",
          "command": "kooha"
        },
        {
          "label": "ÔÅã",
          "command": "playerctl play-pause"
        },
        {
          "label": "ú∞é",
          "command": "playerctl previous"
        },
        {
          "label": "ú∞è",
          "command": "playerctl next"
        }
      ]
    }
  }
}
